<div class="gallery mt-2">
  <div class="letter">
    <% if @letter.body.present? %>
      <%= @letter.body %>
    <% end %>
    <% if @letter.user_upload.present? %>
      <a class="button" href="<%= rails_blob_path(@letter.user_upload, disposition: "attachment") %>">
        Download original letter
      </a>
    <% end %>
  </div>
  <p class="mt-1"><%= @letter.display_name %></p>
  <% if @letter.private? %>
    <p class="mt-1"><%= t("letters.show.private") %></p>
  <% end %>
  <% if @prev %>
    <nav id="prev">
      <%= link_to image_tag("right.svg"), letter_path(@prev, filter_langs: @filter_langs) %>
  <% end %>
  </nav>
  <nav id="next">
    <% if @next %>
      <%= link_to image_tag("left.svg"), letter_path(@next, filter_langs: @filter_langs) %>
    <% end %>
  </nav>
</div>
