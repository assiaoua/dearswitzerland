<%= render "filter" %>

<div class="gallery">
  <div class="letter">
    <%= @letter.body %>
  </div>
  <p class="mt-1"><%= @letter.display_name %></p>
  <% if @letter.prev %>
    <nav id="prev">
      <%= link_to image_tag("left"), @letter.prev %>
  <% end %>
  </nav>
  <nav id="next">
    <% if @letter.next %>
      <%= link_to image_tag("right"), @letter.next %>
    <% end %>
  </nav>
</div>
